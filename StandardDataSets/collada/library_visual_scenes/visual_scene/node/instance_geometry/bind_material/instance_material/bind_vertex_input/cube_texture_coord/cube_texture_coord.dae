        <subject>Test a bind_vertex_input of a material applied to a geometry in the visual scene</subject>
        <title>0491</title>
        <unit meter="0.01" name="centimeter"/>
        <up_axis>Y_UP</up_axis>
    </asset>
    <library_cameras>
        <camera id="mainCamera" name="mainCamera">
            <optics>
                <technique_common>
                    <perspective>
                        <yfov>36.9998</yfov>
                        <aspect_ratio>1</aspect_ratio>
                        <znear>1</znear>
                        <zfar>1000</zfar>
                    </perspective>
                </technique_common>
            </optics>
        </camera>
    </library_cameras>
    <library_lights>
        <light id="directionalLightShape1-lib" name="directionalLightShape1">
            <technique_common>
                <directional>
                    <color>1 1 1</color>
                </directional>
            </technique_common>
        </light>
    </library_lights>
    <library_images>
        <image id="file1" name="file1">
            <init_from>collada.png</init_from>
        </image>
    </library_images>
    <library_materials>
        <material id="lambert1" name="lambert2">
            <instance_effect url="#lambert1-fx"/>
        </material>
    </library_materials>
    <library_effects>
        <effect id="lambert1-fx">
            <profile_COMMON>
                <newparam sid="file1-surface">
                    <surface type="2D">
                        <init_from>file1</init_from>
                    </surface>
                </newparam>
                
                <newparam sid="file1-sampler">
                    <sampler2D>
                        <source>file1-surface</source>
                    </sampler2D>
                </newparam>
               
                <technique sid="common">
                    <lambert>
                        <diffuse>
                          <texture texture="file1-sampler" texcoord="TEX0"/>                            
                        </diffuse>
                    </lambert>
                </technique>
            </profile_COMMON>
        </effect>
    </library_effects>
    <library_geometries>
        <geometry id="cube" name="cube">
            <mesh>
                <source id="pCubeShape1-positions" name="position">
                    <float_array id="pCubeShape1-positions-array" count="12">-25 -25 25 25 -25 25 -25 25 25 25 25 25</float_array>
                    <technique_common>
                        <accessor count="4" source="#pCubeShape1-positions-array" stride="3">
                            <param name="X" type="float"/>
                            <param name="Y" type="float"/>
                            <param name="Z" type="float"/>
                        </accessor>
                    </technique_common>
                </source>
                <source id="cube-map1" name="map1">
                    <float_array id="cube-map1-array" count="8">0 0 0.25 0 0.25 0.625 0 0.625</float_array>
                    <technique_common>
                        <accessor count="4" source="#cube-map1-array" stride="2">
                            <param name="S" type="float"/>
                            <param name="T" type="float"/>
                        </accessor>
                    </technique_common>
                </source>
                
                <vertices id="cube-vertices">
                    <input semantic="POSITION" source="#pCubeShape1-positions"/>
                </vertices>
                <polylist count="1" material="lambert2SG">
                    <input offset="0" semantic="VERTEX" source="#cube-vertices"/>
                    <input offset="1" semantic="TEXCOORD" source="#cube-map1" set="0"/>
                    
                    <vcount>4</vcount>
                    <p>0 0 1 1 3 2 2 3</p>
                </polylist>
            </mesh>
        </geometry>
    </library_geometries>
    <library_visual_scenes>
        <visual_scene id="VisualSceneNode" name="untitled">
            <node id="cube_node" name="cube_node">
                <scale sid="scale">3 3 3</scale>
                <instance_geometry url="#cube">
                    <bind_material>
                        <technique_common>
                            <instance_material symbol="lambert2SG" target="#lambert1">
                                <bind_vertex_input semantic="TEX0" input_semantic="TEXCOORD" input_set="0"/>
                                
                            </instance_material>
                        </technique_common>
                    </bind_material>
                </instance_geometry>
            </node>
            <node id="testCamera" name="testCamera">
                <translate sid="translate">0 0 400</translate>
                <rotate sid="rotateZ">0 0 1 0</rotate>
                <rotate sid="rotateY">0 1 0 0</rotate>
                <rotate sid="rotateX">1 0 0 0</rotate>
                <instance_camera url="#mainCamera"/>
            </node>
            <node id="directionalLight1" name="directionalLight1">
                <translate sid="translate">50 0 400</translate>
                <rotate sid="rotateZ">0 0 1 0</rotate>
                <rotate sid="rotateY">0 1 0 0</rotate>
                <rotate sid="rotateX">1 0 0 0</rotate>
                <instance_light url="#directionalLightShape1-lib"/>
            </node>
        </visual_scene>
    </library_visual_scenes>
    <scene>
        <instance_visual_scene url="#VisualSceneNode"/>
    </scene>
</COLLADA>
