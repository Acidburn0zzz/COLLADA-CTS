struct appin
{
	float4 Pos : POSITION;
	float2 Texcoord : TEXCOORD0;
};

struct vertout
{
	float4 HPosition : POSITION;
	float2 UV : TEXCOORD0;
};

vertout main( appin IN,
uniform float4x4 modelViewMatrix : VIEWPROJ
)
{
	vertout OUT;

	OUT.UV = IN.Texcoord;
	
	OUT.HPosition = mul(modelViewMatrix, IN.Pos);
	
	return OUT;
}